{
  "version": "2025.0.1.13",
  "build": "2025.01.09",
  "name": "DigitalTwin SensorPlus Backend",
  "description": "Complete backend API with dashboard and frontend integration",
  "features": [
    "Real-time sensor simulation (21 devices across 5 rooms + solar farm)",
    "MySQL database integration with auto-save every 5 minutes",
    "Complete REST API with CORS support",
    "Dashboard with blue control buttons",
    "Real-time data API (/api/data, /api/proxy/data)",
    "Historical data API (/api/history/<sensor_type>/<device_id>)",
    "Device management API",
    "Health monitoring endpoints",
    "Database status and debugging",
    "Simulator control endpoints",
    "Comprehensive error handling",
    "Production-ready deployment",
    "Fixed database connection for online version",
    "Resolved API endpoint configuration issues",
    "Enhanced CORS configuration for frontend compatibility"
  ],
  "api": {
    "base_url": "https://digitaltwin-sensorplus-1.onrender.com",
    "endpoints": [
      "/api/data",
      "/api/proxy/data",
      "/api/health",
      "/api/database-status",
      "/api/debug-database",
      "/api/devices",
      "/api/devices/<device_id>",
      "/api/history/<sensor_type>/<device_id>",
      "/api/toggle-simulator"
    ],
    "cors_enabled": true,
    "supported_methods": ["GET", "POST", "OPTIONS"]
  },
  "database": {
    "type": "MySQL",
    "auto_save_interval": "5 minutes",
    "tables": [
      "temperature_data",
      "humidity_data", 
      "co2_data",
      "light_data",
      "solar_data"
    ]
  },
  "deployment": {
    "platform": "Render.com",
    "status": "production_ready",
    "last_deploy": "2025.01.09"
  }
}